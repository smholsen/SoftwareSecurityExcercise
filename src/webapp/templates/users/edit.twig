{% extends 'layouts/base.twig' %}

{% block content %}
    <h2>Edit profile</h2>

    <form action="" method="post" class="ui form">

        <div class="field">
            <label>First name</label>
            <input type = "text" name="first_name" value= "{{ user.firstName|e }}">
        </div>

        <div class="field">
            <label>Last name</label>
            <input type = "text" name="last_name" value= "{{ user.lastName|e }}">
        </div>

        <div class="field">
            <label>Phone</label>
            <input type = "text" name="phone"  value= "{{ user.phone|e }}">
        </div>

        <div class="field">
            <label>Email</label>
            <input type="text" name="email" value="{{ user.email|e }}">
        </div>

        <div class="field">
            <label>Company</label>
            <input type="text" name="company" value="{{ user.company|e }}">
        </div>

        <input type="submit" name="submit" value="Save profile" class="positive ui button">
    </form>
<br/>
    
{% endblock %}
