{% extends 'layouts/promotional.twig' %}

{% block content %}
    <h2>New user</h2>

    <form action="" method="post" class="ui form">
        <div class="field">
            <label>Username*</label>
            <input type="text" name="user" value="{{ username }}">
        </div>

        <div class="field">
            <label>Password*</label>
            <input type="password" name="pass">
        </div>

        <div class="field">
            <label>First name* (Not visible to others)</label>
            <input type="text" name="first_name" value="{{ firstname }}">
        </div>

        <div class="field">
            <label>Last name* (Not visible to others)</label>
            <input type="text" name="last_name" value="{{ lastname }}">
        </div>

        <div class="field">
            <label>Phone (Only eight digits please)</label>
            <input type="text" name="phone" value="{{ phonenumber }}">
        </div>

        <div class="field">
            <label>Company</label>
            <input type="text" name="company" value="{{ companyname }}">
        </div>

        <input type="submit" name="submit" value="Create new user" class="positive ui button">
    </form>
{% endblock %}
