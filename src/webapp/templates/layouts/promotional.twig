<!DOCTYPE html>
<html>
    <head>
        {% set titleVar = 'Patentsy AS' %}
        {% include 'components/head.twig' %}
    </head>

    <body>
        <div class="ui grey fixed inverted menu">
            {% include 'components/menu.twig' %}
        </div>

        <div id="primary-content" class="ui text container">
            {% if flash.info %}
                <div class="ui warning message">
                {% for inf in flash.info %}
                    {{ inf|e }}
                    <br>
                {% endfor %}
                </div>
            {% endif %}
            {% if flash.success %}
                    <div class="ui success message">
                    {% for suc in flash.success %}
                        {{ suc|e }}
                        <br>
                    {% endfor %}
                    </div>
            {% endif %}
            {% if flash.error %}
                <div class="ui error message">
                {% for err in flash.error %}
                    {{ err|e }}
                    <br>
                {% endfor %}
                </div>
            {% endif %}
            {% if flash.msg %}
                    <div class="ui warning message">
                        {% for msg in flash.msg %}
                            {{ msg|e }}
                            <br>
                        {% endfor %}
                    </div>
            {% endif %}


            {% block content %}{% endblock %}
        </div>

        <div class="ui inverted vertical footer segment">
            <div class="ui container">
                {% block footer %}Copyright Â© 2016 Patentsy AS{% endblock %}
            </div>
        </div>
    </body>
</html>
